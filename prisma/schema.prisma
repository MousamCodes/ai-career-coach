generator client {
  provider = "prisma-client-js"
  output   = "../lib/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id          String   @id @default(uuid())
  clerkUserId String   @unique
  email       String   @unique
  name        String?
  imageURL    String?
  industry    String?    // ✅ Just a string field, no foreign key
  subIndustry String?    
  // ✅ REMOVE this line that creates the foreign key constraint:
  // industryInsights IndustryInsights? @relation(fields: [industry], references: [industry])
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  //Profile fields
  bio        String?
  experience Int?
  skills     String?

  assessments String?
  resume String?
  coverLetter String?

  CoverLetter CoverLetter[]
  Assessment Assessment[]
  Resume Resume[]
}

model Assessment {
  id           String   @id @default(cuid())
  userId       String
  user         User     @relation(fields: [userId], references: [id])
  quizeScore   Float      //Score of the assessment
  questions   String      //JSON string of questions and answers
  category     String     //e.g. "Technical", "Behavioral"
  imporvementTips String? //AI generated tips for improvement
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  @@index([userId]) // Index for faster queries by user and category
}

model Resume {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  content     String   //JSON string of resume content
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId]) // Index for faster queries by user
}

model CoverLetter {
  id          String   @id @default(cuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  content     String   //JSON string of cover letter content
  jobDescription String? //Optional job description for tailoring
  companyName String? //Optional company name for tailoring
  position    String? //Optional position for tailoring
  
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@index([userId]) // Index for faster queries by user
}

model IndustryInsights {
  id        String   @id @default(cuid())   
  industry  String   @unique //industry that this data belongs to 
  // ✅ REMOVE this line:
  // users     User[]   

  //salary data
  salaryRanges Json[] //JSON array of salary ranges for different roles

  //Industry trends
  growthRate Float? //Annual growth rate of the industry
  demandLevel String? //Demand level (e.g. "High", "Medium", "Low")
  topSkills String? //Top skills in demand in the industry)

  //Market
  marketOutlook String? //Market outlook for the industry "negative", "stable", "positive"
  keyTrends     String?

  //learning suggestions
  recommendedSkills String? //Recommended skill development

  lastUpdated   DateTime @default(now())
  nextUpdate   DateTime @updatedAt

  @@index([industry]) // Index for faster queries by industry
}


enum DemandLevel {  //enumeration for demand level custon data types
  HIGH
  MEDIUM
  LOW
}

enum MarketOutlook {
  NEGATIVE
  STABLE
  POSITIVE
}



